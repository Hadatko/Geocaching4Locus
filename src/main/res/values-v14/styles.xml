<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="G4LTheme" parent="@android:style/Theme.Holo">
    </style>
    <style name="G4LTheme.NoTitle" parent="@android:style/Theme.Holo.Dialog.NoActionBar"/>
    <style name="G4LTheme.Light" parent="@android:style/Theme.Holo.Light">
        <item name="buttonPanelStyle">@style/CustomButtonPanelStyle</item>
        <item name="buttonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="buttonBarButtonStyle">?android:attr/buttonBarButtonStyle</item> 
    </style>
    <style name="G4LTheme.Light.NoTitle">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="G4LTheme.Invisible" parent="@style/G4LTheme.Light.NoTitle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Note that we use the base animation style here (that is no
             animations) because we really have no idea how this kind of
             activity will be used. -->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
	</style>

    <style name="G4LTheme.Dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@drawable/var_dialog_bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        
        <item name="buttonPanelStyle">@style/CustomButtonPanelStyle</item>
        <item name="buttonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="buttonBarButtonStyle">?android:attr/buttonBarButtonStyle</item> 
    </style>
    <style name="G4LTheme.Dialog.NoTitle">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomButtonPanelStyle">
        <item name="android:minHeight">48dip</item>
        <item name="android:divider">?android:attr/dividerHorizontal</item>
        <item name="android:showDividers">beginning</item>
        <item name="android:dividerPadding">0dip</item>
    </style> 
    
    <style name="SimpleHeader" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:background">@drawable/list_section_divider_holo_light</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:textAllCaps">true</item>
        
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="SimpleEditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="SimpleEditTextButton" parent="SimpleEditText">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
        
        <item name="android:background">@drawable/spinner_background_holo_light</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>
    <style name="SimpleButton" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
        
    <style name="LoginMessageView" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">10.0dip</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>