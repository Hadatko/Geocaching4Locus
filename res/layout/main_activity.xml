<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_gravity="right" android:orientation="vertical">
	<LinearLayout android:orientation="vertical" android:id="@+id/linear_layout_title" android:background="@drawable/var_panel_top" android:layout_width="fill_parent" android:layout_height="@dimen/title_height">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="6.0dip">
            <TextView android:textColor="@android:color/white" android:ellipsize="end" android:gravity="center_vertical" android:text="@string/app_name" android:paddingLeft="5.0dip" android:paddingRight="5.0dip" android:layout_width="0.0dip" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1.0" style="?android:attr/textAppearanceLarge" />
            <ImageView android:id="@+id/image_view_separator" style="@style/SeparatorVertical" />
            <ImageButton android:id="@+id/image_button_title_setting" android:background="@drawable/selector_button" android:src="@drawable/ic_settings_default" android:layout_width="@dimen/title_height" android:layout_height="@dimen/title_height" android:onClick="onClickSettings" />
            <ImageView android:id="@+id/image_view_separator" style="@style/SeparatorVertical" />
            <ImageButton android:id="@+id/image_button_title_close" android:background="@drawable/selector_button" android:src="@drawable/ic_cancel_default" android:layout_width="@dimen/title_height" android:layout_height="@dimen/title_height" android:onClick="onClickClose" />
        </LinearLayout>
    </LinearLayout>
	<ScrollView android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
			<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical">
				<TextView style="?android:attr/listSeparatorTextViewStyle" android:text="@string/coordinates" android:layout_height="wrap_content" android:layout_width="fill_parent"></TextView>
				<TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:stretchColumns="0">
					<TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
						<EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/latitudeEditText"></EditText>
						<Button android:layout_height="wrap_content" android:text="GPS" android:paddingLeft="10dip" android:paddingRight="10dip" android:id="@+id/buttonGps" android:onClick="onClickGps"></Button>
					</TableRow>
					<TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
						<EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/logitudeEditText">
							<requestFocus></requestFocus>
						</EditText>
					</TableRow>
				</TableLayout>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical" android:layout_marginTop="20dip">
				<Button android:onClick="onClickSearch" android:layout_height="wrap_content" android:id="@+id/search" android:text="@string/search_and_import_button" android:layout_width="wrap_content" android:layout_gravity="center"></Button>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
