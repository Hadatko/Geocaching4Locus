<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent">
	<LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical">
		<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent">
			<TextView android:text="Coordinates" android:layout_width="fill_parent" android:layout_height="wrap_content" style="?android:attr/listSeparatorTextViewStyle"/>
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent">
			<Button android:layout_height="wrap_content" android:id="@+id/coordinates" android:text="from GPS" android:layout_width="fill_parent" android:onClick="onClickCoordinates"/>
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent">
			<TextView android:text="Filter" android:layout_width="fill_parent" android:layout_height="wrap_content" style="?android:attr/listSeparatorTextViewStyle"/>
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent">
			<Button android:layout_height="wrap_content" android:id="@+id/filter" android:text="Filter" android:layout_width="fill_parent" android:onClick="onClickFilter"/>
		</LinearLayout>
		<RelativeLayout android:layout_height="fill_parent" android:layout_width="fill_parent">
			<Button android:layout_width="wrap_content" android:id="@+id/search" android:layout_alignParentBottom="true" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:text="Search" android:onClick="onClickSearch"/>
		</RelativeLayout>
	</LinearLayout>
</ScrollView>
