<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        layout="@layout/header" />

    <ScrollView
        style="@style/ScreenContainer"
        android:layout_height="0dip"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/coordinates" >
            </TextView>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0" >

                <TableRow>

                    <EditText
                        android:id="@+id/latitudeEditText"
                        style="@style/SimpleEditText"
                        android:inputType="textNoSuggestions" />

                    <Button
                        android:id="@+id/buttonGps"
                        android:layout_height="wrap_content"
                        android:onClick="onClickGps"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@string/gps" >
                    </Button>
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/logitudeEditText"
                        style="@style/SimpleEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textNoSuggestions" />
                </TableRow>
            </TableLayout>
            
            <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/pref_count_of_caches" />

            <EditText
                android:id="@+id/cacheCountEditText"
                style="@style/SimpleEditText"
                android:focusableInTouchMode="false"
                android:inputType="none" >

                <requestFocus />
            </EditText>
            
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        style="?attr/buttonPanelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            style="?attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/searchButton"
                style="?attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:maxLines="2"
                android:onClick="onClickSearch"
                android:text="@string/download_button"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>