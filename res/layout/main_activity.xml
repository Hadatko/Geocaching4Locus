<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_gravity="right" android:orientation="vertical">
    <LinearLayout android:id="@+id/linearLayout3" android:layout_height="wrap_content" android:layout_width="fill_parent"></LinearLayout>
	<ScrollView android:id="@+id/LinearLayout1" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
			<LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical">
				<TextView style="?android:attr/listSeparatorTextViewStyle" android:text="Coordinates" android:layout_height="wrap_content" android:id="@+id/TextView1" android:layout_width="fill_parent"></TextView>
				<Button android:onClick="onClickCoordinates" android:layout_height="wrap_content" android:id="@+id/coordinates" android:text="from GPS" android:layout_width="fill_parent"></Button>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content" android:layout_gravity="right" android:layout_width="fill_parent" android:orientation="vertical">
				<Button android:onClick="onClickSearch" android:layout_height="wrap_content" android:id="@+id/search" android:text="Search" android:layout_width="wrap_content"></Button>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
