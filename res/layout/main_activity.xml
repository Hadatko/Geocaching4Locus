<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="right"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/var_panel_top"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/TitleBarTitle"
            android:text="@string/app_name" />

        <ImageView
            android:id="@+id/image_view_separator"
            style="@style/TitleBarSeparator" />

        <ImageButton
            android:id="@+id/image_button_title_setting"
            style="@style/TitleBarButton"
            android:contentDescription="@string/preferences"
            android:onClick="onClickSettings"
            android:src="@drawable/ic_settings_default" />

        <ImageView
            android:id="@+id/image_view_separator_2"
            style="@style/TitleBarSeparator" />

        <ImageButton
            android:id="@+id/image_button_title_close"
            style="@style/TitleBarButton"
            android:contentDescription="@string/close"
            android:onClick="onClickClose"
            android:src="@drawable/ic_cancel_default" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/coordinates" >
            </TextView>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0" >

                <TableRow>

                    <EditText
                        android:id="@+id/latitudeEditText"
                        style="@style/SimpleEditText"
                        android:inputType="textNoSuggestions" />

                    <Button
                        android:id="@+id/buttonGps"
                        android:layout_height="wrap_content"
                        android:onClick="onClickGps"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@string/gps" >
                    </Button>
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/logitudeEditText"
                        style="@style/SimpleEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textNoSuggestions" />
                </TableRow>
            </TableLayout>

            <CheckBox
                android:id="@+id/simpleCacheDataCheckBox"
                style="@style/SimpleCheckbox"
                android:text="@string/download_simple_cache_data" />

            <CheckBox
                android:id="@+id/importCachesCheckBox"
                style="@style/SimpleCheckbox"
                android:text="@string/import_caches" />

            <Button
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dip"
                android:onClick="onClickSearch"
                android:text="@string/search_and_import_button" >
            </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>