<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="G4LTheme" parent="@android:style/Theme">
    </style>
    <style name="G4LTheme.NoTitle" parent="@android:style/Theme.Dialog">
    </style>
	<style name="G4LTheme.Invisible" parent="@android:style/Theme.Translucent.NoTitleBar">
	</style>
	<style name="G4LTheme.Light" parent="@android:style/Theme.Light">
    </style>
    <style name="G4LTheme.Light.NoTitle">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="G4LTheme.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/var_dialog_bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        
        <item name="buttonPanelStyle">@style/CustomButtonPanelStyle</item>
        <item name="buttonBarStyle">@style/CustomButtonBarStyle</item>
        <item name="buttonBarButtonStyle">@style/CustomButtonBarButtonStyle</item> 
    </style>
    <style name="G4LTheme.Dialog.NoTitle">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="G4LTheme.SearchNearestActivity" parent="G4LTheme.Light.NoTitle">
    </style>
    <style name="G4LTheme.SearchNearestActivity.Dialog" parent="G4LTheme.Dialog.NoTitle">
        <item name="normalWindow">@style/G4LTheme.SearchNearestActivity</item>
    </style>
    <style name="G4LTheme.MenuActivity" parent="G4LTheme.Dialog.NoTitle">
    </style>

    <style name="G4LTheme.Settings" />
    <style name="SimpleHeader" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/dark_header_dither</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>
    <style name="SimpleEditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="SimpleEditTextButton" parent="SimpleEditText">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
        
        <item name="android:background">@android:drawable/btn_dropdown</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="SimpleButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
    </style>
    <style name="SimpleButton.GPS">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">0dip</item>
    </style>
    <style name="CustomButtonPanelStyle">
        <item name="android:minHeight">54dip</item>
        <item name="android:background">#A9A9A9</item>
    </style>
    <style name="CustomButtonBarStyle">
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
    </style>
    <style name="CustomButtonBarButtonStyle">
    </style>
    	
	<!-- Status Bar Styles -->

    <style name="TextAppearance">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHighlight">#FFFF9200</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
        <item name="android:textColorLink">#5C5CFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextAppearance.StatusBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="TextAppearance.StatusBar.Ticker">
    </style>
    <style name="TextAppearance.StatusBar.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.StatusBar.Icon">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent">
        <item name="android:textColor">#ff6b6b6b</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>
    
    <style name="TitleBarButton" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/item_background_holo_light</item>
        <item name="android:layout_width">@dimen/title_height</item>
        <item name="android:layout_height">@dimen/title_height</item>
    </style>
    <style name="TitleBarTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <style name="TitleBarSeparator">
        <item name="android:background">@color/title_separator</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="SeparatorVertical">
        <item name="android:background">@color/title_separator</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">4.0dip</item>
        <item name="android:layout_marginBottom">4.0dip</item>
    </style>
    <style name="SeparatorHorizontal">
        <item name="android:background">@color/title_separator</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">4.0dip</item>
        <item name="android:layout_marginRight">4.0dip</item>
        </style>
    <style name="SeparatorVertical.Dark" parent="@style/SeparatorVertical">
        <item name="android:background">@color/title_separator_dark</item>
    </style>
    <style name="SeparatorHorizontal.Dark" parent="@style/SeparatorHorizontal">
        <item name="android:background">@color/title_separator_dark</item>
    </style>
    <style name="ScreenContainer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MainMenuButton">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/foreground1</item>
        <item name="android:gravity">center|top</item>
        <!-- <item name="android:layout_gravity">center</item> -->
        <item name="android:background">@drawable/item_background_holo_light</item>
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="LoginMessageView" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">10.0dip</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
