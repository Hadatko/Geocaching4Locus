<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeLight" parent="@android:style/Theme.Light">
        <item name="android:windowTitleSize">20.0dip</item>
    </style>
    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/var_dialog_bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item> -->
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>
    <style name="SeparatorVertical">
        <item name="android:background">@color/title_separator</item>
        <item name="android:layout_width">1.0px</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="SimpleEditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="SimpleCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
    </style>
    
	<!-- <style name="Theme" parent="android:Theme.Dialog">
		<item name="android:windowBackground">@null</item>
		<item name="android:windowNoTitle">true</item>
	</style> -->
</resources>
